{
    "compilerOptions": {
      "module": "commonjs",
      "strict": false,
      "baseUrl": "./src",
      "outDir": "build",
      "removeComments": true,
      "target": "es2016",
      "lib": ["es2016"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "./src/public/"
    ]
}